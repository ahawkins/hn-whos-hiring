<div class="row">
	<div class="col">
		<form class="form-inline">
			<div class="input-group mb-2 mr-sm-2">
				<div class="input-group-prepend">
					<label class="input-group-text" for="filter">Filter Posts By</span>
				</div>
				<select name="filter" class="custom-select" id="post-filter">
					<option value="all" <%= all_posts? ? 'selected' : nil %>>All</option>
					<option value="seeking_work" <%= seeking_work? ? 'selected' : nil %>>Seeking Work</option>
					<option value="seeking_freelancer" <%= seeking_freelancer? ? 'selected' : nil %>>Seeking Freelancer</option>
				</select>
			</div>

			<div class="form-check mb-2 mr-sm-2">
				<input class="form-check-input" type="checkbox" id="remote" name="remote" value="true" <%= remote? ? 'checked' : nil %>>
				<label class="form-check-label" for="remote">Remote?</label>
			</div>

			<input type="text" class="form-control mb-2 mr-sm-2" id="keyword" name="q" aria-label="Keyword" placeholder="Keyword" value="<%= keyword %>">

			<button class="btn btn-primary mb-2 mr-sm-2" type="submit" formaction="/freelancers" formmethod="get" id="get-posts">Go</button>
			<button class="btn btn-secondary mb-2 mr-sm-2" type="submit" formaction="/rss/freelancers" formmethod="get" id="subscribe">Subscribe</button>
		</form>
	</div>
</div>

<div class="row">
	<div class="col">
		<ul>
			<% @ads.each do |ad| %>
				<li class="post">
					<date><%= ad.timestamp.strftime("%Y-%m-%d") %></date> - <a id="post-<%= ad.id %>" href="<%= ad.link %>"><%= html_encode(titleize(ad)) %></a>
				</li>
			<% end %>
		</ul>
	</div>
</div>
